<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
       fx:controller="com.example.controllers.MiembroController"
       style="-fx-background-color: #2F4F7F; -fx-font-size: 14px;">
    <children>
        <Label text="Miembro" style="-fx-text-fill: #FFFFFF; -fx-font-size: 18px;" />
        <TextField fx:id="nombreTextField" promptText="Nombre" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
        <TextField fx:id="edadTextField" promptText="Edad" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
        <Button fx:id="agregarMiembroButton" onAction="#agregarMiembro" text="Agregar" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
        <Button fx:id="eliminarMiembroButton" onAction="#eliminarMiembro" text="Eliminar" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
        <Button fx:id="actualizarMiembroButton" onAction="#actualizarMiembro" text="Actualizar" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
        <ListView fx:id="miembrosListView" prefHeight="150.0" prefWidth="150.0" style="-fx-text-fill: #000000; -fx-font-size: 14px;" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <spacing>
        5
    </spacing>
</VBox>