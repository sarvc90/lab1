<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="com.example.controllers.MainController">
    <center>
        <TabPane fx:id="mainTabPane">
            <tabs>
                <Tab text="Miembros">
                    <content>
                        <VBox>
                            <Button text="Open Miembros View" onAction="#openMiembrosView"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Deportes">
                    <content>
                        <VBox>
                            <Button text="Open Deportes View" onAction="#openDeportesView"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Sesiones">
                    <content>
                        <VBox>
                            <Button text="Open Sesiones View" onAction="#openSesionesView"/>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Entrenadores">
                    <content>
                        <VBox>
                            <Button text="Open Entrenadores View" onAction="#openEntrenadorView"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>